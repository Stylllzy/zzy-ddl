/* pages/mine/mine.wxss */
#mine {
  width: 100%;
  height: 100%;
  background: #f3f3f3;
}
.header {
  width: 100%;
  height: 450rpx;
  background: #2d8cf0;
  position: relative;
}
.header > .van-notice-bar {
  height: 55rpx !important;
  line-height: 55rpx !important;
}
.image {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  margin-top: 30rpx;
  position: relative;
  left: 50%;
  margin-left: -60rpx;
}
.name {
  text-align: center;
  color: #fff;
  margin-top: 15rpx;
  font-size: 35rpx;
}
.nav {
  width: 100%;
  display: flex;
  position: absolute;
  bottom: 30rpx;
}
.nav-item {
  flex: 1;
  text-align: center;
  color: #fff;
}
.nav-item-title {
  font-size: 30rpx;
  margin-top: 10rpx;
}
.group {
  margin-top: 20rpx;
}